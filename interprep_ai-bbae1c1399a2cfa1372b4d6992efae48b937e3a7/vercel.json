{
  "version": 2,
  "buildCommand": "npm run build && npm run build:backend",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/handler"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/handler.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}